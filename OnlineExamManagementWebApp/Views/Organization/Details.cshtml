@model OnlineExamManagementWebApp.Models.Organization

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Organization Details<small>Basic Info</small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="#">Settings 1</a>
                    </li>
                    <li>
                        <a href="#">Settings 2</a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        <!--TOP SECTION-->
        <div class="orgLogoDetails">
            <img src="@Url.Action("GetOrgLogo", new {orgId = Model.Id})" />
        </div>    
        
        <div class="orgTopSection">
            <div class="orgName">
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="orgAbout">
                @Html.DisplayNameFor(model => model.About)
            </div>
        </div>
        <!--TOP SECTION END-->
        <div class="clearfix"></div>

        <!--tab panel starts-->
        <div class="" role="tabpanel" data-example-id="toggle-tabs">
            <ul class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#course-tab" role="tab" data-toggle="tab" aria-expanded="True">Courses</a>
                </li>
                <li>
                    <a href="#trainer-tab" role="tab" data-toggle="tab" aria-expanded="False">Trainers</a>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="course-tab">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><small>Course Info.</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li>
                                        <a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>

                            <div class="x_content">

                            </div>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="trainer-tab">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><small>Trainer Info.</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li>
                                        <a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>

                            <div class="x_content">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--tab panel ends-->

        <div class="clearfix"></div>

        <!--BOTTOM SECTION-->
        @Html.DisplayFor(model => model.Address)
        @Html.DisplayFor(model => model.Contact)
        <!--BOTTOM SECTION ENDS-->
        
        <div class="clearfix"></div>
        
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>


