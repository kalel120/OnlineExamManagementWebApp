<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Trainer</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <select class="form-control" id="js-ddl-trainers" style="width: 25%">></select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">Is Lead?</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <label>
                <input id="is-lead" type="checkbox" class="js-switch" />
            </label>
        </div>
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <input type="button" value="Add" class="btn btn-success" id="js-insert-table" />
        </div>
    </div>
</form>

